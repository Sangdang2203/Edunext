@using Edunext_Model.DTOs.Product;
@model ProductPost;

@{
    ViewData["Title"] = "Product Management";
}

<h4>Edit information</h4>
<hr />
<div class="row">
    <div class="col-lg-12 col-md-12 w-75 mx-auto">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Code" class="control-label">Code</label>
                <input asp-for="Code" class="form-control" placeholder="Product Code ..." />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Product Name ..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Image_Url" class="form-label">Current Image</label>
                <img src="~/@Model.Image" name="Image" width="100" class="img-thumbnail" id="Image_Url" />
            </div>
            <div class="form-group">
                <label for="Image" class="form-label">Image</label>
                <input type="file" class="form-control" name="Image" id="Image" placeholder="Upload File ..." />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" placeholder="Product Price ..." />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Quantity" class="control-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" placeholder="Quantity ..." />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Description ..." />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-select text-uppercase" asp-items="@ViewBag.Categories"></select>
            </div>
            <div class="my-2">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="reset" class="btn btn-dark">Cancel</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

