
@using Edunext_Model.DTOs.Product;
@model IEnumerable<ProductGet>;

<div class="d-flex justify-content-between align-items-center my-4">
    <h2>Product Management</h2>
    <a asp-action="Create" class="btn btn-light">+ Add New</a>
</div>

<form class="d-flex">
    <input type="hidden" name="sort" value="@ViewBag.Sort" />
    <input name="search" class="form-control w-25" placeholder="Enter your search..." value="@ViewBag.Search" />
    <button class="btn btn-outline-success ms-2">Search</button>
</form>
<br />

@if (TempData["success"] != null)
{
    <div class="alert alert-success my-2">
        @TempData["success"]
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger my-2">
        @TempData["error"]
    </div>
}

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>

            <th scope="col">
                <a asp-action="Index"
                   asp-route-sort="@ViewBag.ProductName"
                   asp-route-search="@ViewBag.Search"
                   class="text-decoration-none text-dark">
                    <span>Name</span>
                    <i class="@ViewBag.Icon"></i>
                </a>
            </th>

            <th scope="col">Image</th>

            <th scope="col">Category</th>

            <th scope="col">
                <a asp-action="Index"
                   asp-route-sort="@ViewBag.Price"
                   asp-route-search="@ViewBag.Search"
                   class="text-decoration-none text-dark">
                    <span>Price</span>
                    <i class="@ViewBag.Icon"></i>
                </a>
            </th>

            <th scope="col">
                <a asp-action="Index"
                   asp-route-sort="@ViewBag.Quantity"
                   asp-route-search="@ViewBag.Search"
                   class="text-decoration-none text-dark">
                    <span>Quantity</span>
                    <i class="@ViewBag.Icon"></i>
                </a>
            </th>

            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td class="text-uppercase">@item.Name</td>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.Name" width="100" class="img-thumbnail" />
                    </td>
                    <td>@item.Category.Name</td>
                    <td>$ @item.Price</td>
                    <td>@(item.Quantity == 0 ? "Out of stock" : item.Quantity)</td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger text-decoration-none" 
                            data-bs-toggle="tooltip" data-bs-placement="top" title="Delete"
                            onclick="return confirm('Are your sure to delete this product ?')">
                            <i class="bi bi-trash-fill"></i>
                        </a>

                        <a class="mx-2 text-dark text-decoration-none"
                           data-bs-toggle="modal"
                           data-bs-target="@("#Modal" + item.Id)"
                           data-bs-placement="top" title="See details">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                        @(await Html.PartialAsync("Details", item))

                        <a class="text-success text-decoration-none" asp-action="Edit" asp-route-id="@item.Id"
                           data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
    @if (Model?.Count() == 0)
    {
        <tr class="alert alert-danger text-center"><td colspan="8">No data !!!</td></tr>
    }
</table>