@using Edunext_Model.DTOs.Product;
@model ProductPost;

@{
    ViewData["Title"] = "Add New Product";
}

<h4>Add New Product</h4>
<hr />
<div class="row">
    <div class="col-lg-12 col-md-12 w-75 mx-auto">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Code</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="my-3">
                <label for="Image" class="form-label">Image</label>
                <input type="file" class="form-control" asp-for="Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quantity</label>
                <input type="number" min=0 asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-select text-uppercase" asp-items="@ViewBag.Categories"></select>
            </div>
            <div class="my-2">
                <button type="submit" class="btn btn-primary">+ Add</button>
                <button type="reset" class="btn btn-dark">Cancel</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

